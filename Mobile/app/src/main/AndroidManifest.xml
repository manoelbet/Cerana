<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cerana.cerana">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.LogInActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".gui.CadastroActivity" />
        <activity android:name=".gui.TelaInicialActivity" />
        <activity android:name=".gui.PerfilActivity"></activity>
    </application>

</manifest>